<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DrawingViewWithTabBarNet8.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DrawingViewWithTabBarNet8"
    Shell.FlyoutBehavior="Disabled"
    Title="DrawingViewWithTabBarNet8">

    <TabBar>
        <Tab Title="Main">
            <ShellContent Title="Home"
                          ContentTemplate="{DataTemplate local:MainPage}"
                          Route="MainPage" />
        </Tab>
        <Tab  Title="Secondary">
            <ShellContent Title="Secondary"
                          ContentTemplate="{DataTemplate local:SecondaryPage}"
                          Route="SecondaryPage"/>
        </Tab>
    </TabBar>

</Shell>
